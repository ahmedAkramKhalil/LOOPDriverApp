<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp">

    <RelativeLayout
        android:id="@+id/contentAreaView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/galleryImgView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@mipmap/ic_no_icon" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/deleteImgView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_delete_gallery" />
    </RelativeLayout>

    <View
        android:id="@+id/seperatorView"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@+id/contentAreaView"
        android:visibility="gone" />
</RelativeLayout>