<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainArea"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar_include"
        layout="@layout/design_toolbar_general" />

    <ScrollView
        android:background="#f1f1f1"
        android:layout_above="@+id/footerLayout"
        android:layout_below="@+id/toolbar_include"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/storInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/_90sdp"
                android:background="@color/appThemeColor_1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"

                    android:layout_marginEnd="@dimen/_10sdp"
                    android:orientation="horizontal">

                    <com.view.SelectableRoundedImageView
                        android:id="@+id/storeImageView"
                        android:layout_width="@dimen/_65sdp"
                        android:layout_height="@dimen/_65sdp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="start"
                        android:layout_marginStart="@dimen/_15sdp"

                        android:scaleType="centerCrop"
                        app:sriv_border_color="@color/appThemeColor_TXT_1"
                        app:sriv_border_width="0dp"
                        app:sriv_left_bottom_corner_radius="20dip"
                        app:sriv_left_top_corner_radius="20dip"
                        app:sriv_oval="true"
                        app:sriv_right_bottom_corner_radius="20dip"
                        app:sriv_right_top_corner_radius="20dip" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|start"
                        android:orientation="vertical">

                        <com.view.MTextView
                            android:id="@+id/storeNameTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:ellipsize="end"
                            android:ems="3"
                            android:maxLines="3"
                            android:text=""
                            android:textAlignment="viewStart"
                            android:textColor="@color/appThemeColor_TXT_1"
                            android:textSize="@dimen/_14ssp"
                            app:customTypeFace="@string/systemSemiBold" />

                        <com.view.MTextView
                            android:id="@+id/storeAddressTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/userNameTxt"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:ellipsize="end"
                            android:ems="3"
                            android:maxLines="4"
                            android:text=""
                            android:textAlignment="viewStart"
                            android:textColor="@color/appThemeColor_TXT_1"
                            android:textSize="@dimen/_11ssp"
                            app:customTypeFace="@string/systemRegular" />
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:id="@+id/topArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/storInfo"
                android:background="#f1f1f1"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@color/appThemeColor_1"></FrameLayout>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="-30dp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:elevation="@dimen/_5sdp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/_8sdp"
                    app:contentPadding="@dimen/_10sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.view.MTextView
                            android:includeFontPadding="false"
                            android:id="@+id/orderinfoTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="start"
                            android:text=""
                            android:textAlignment="viewStart"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/txt_size_16"
                            app:customTypeFace="@string/robotomediumFont" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:orientation="horizontal"
                            android:weightSum="1">


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:visibility="gone">

                                <ImageView
                                    android:id="@+id/iv_arrow_icon"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:src="@mipmap/ic_arrow_down" />
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center">

                                <com.view.MTextView
                                    android:includeFontPadding="false"
                                    android:id="@+id/orderIdHTxt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="start"
                                    android:text=""
                                    android:textAlignment="viewStart"
                                    android:textColor="@color/appThemeColor_1"
                                    android:textSize="@dimen/txt_size_16"
                                    app:customTypeFace="@string/robotomediumFont" />

                                <com.view.MTextView
                                    android:includeFontPadding="false"
                                    android:id="@+id/orderIdVTxt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:gravity="start|center"
                                    android:text=""
                                    android:textAlignment="viewStart"
                                    android:textColor="@color/appThemeColor_1"
                                    android:textSize="@dimen/txt_size_16"
                                    app:customTypeFace="@string/robotomediumFont" />
                            </LinearLayout>


                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>
            <RelativeLayout
                android:id="@+id/orderHeaderArea"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/topArea"
                android:background="@color/order_item_gray_color"
                android:visibility="gone">

                <com.view.MTextView
                    android:id="@+id/orderStatusTxt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text=""
                    android:textAlignment="center"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/txt_size_16"
                    app:customTypeFace="@string/robotomediumFont" />
            </RelativeLayout>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
               android:nestedScrollingEnabled="false"
                android:layout_below="@+id/orderHeaderArea"
                android:background="#f1f1f1"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.view.MTextView
                        android:id="@+id/orderDateTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:gravity="center"
                        android:text="Apr 17, 03:15 pm"
                        android:textColor="#767676"
                        android:textSize="@dimen/_11ssp"
                        android:visibility="visible"
                        app:customTypeFace="@string/systemRegular" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.recyclerview.widget.RecyclerView
                            android:nestedScrollingEnabled="false"
                            android:id="@+id/orderItemListRecyclerView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:orientation="vertical"
                            android:visibility="visible"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />


                        <LinearLayout
                            android:id="@+id/orderDeliverArea"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <LinearLayout
                                android:id="@+id/userDetailArea"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="15dp"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <com.view.MTextView
                                        android:id="@+id/userNameVTxt"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:gravity="start"
                                        android:maxLines="1"
                                        android:text=""
                                        android:textColor="#323232"
                                        android:textSize="@dimen/txt_size_15"
                                        app:customTypeFace="@string/robotolightFont" />

                                    <com.view.MTextView
                                        android:id="@+id/userAddressTxt"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:gravity="start"
                                        android:text=""
                                        android:maxLines="4"
                                        android:textAlignment="viewStart"
                                        android:textColor="#323232"
                                        android:textSize="@dimen/txt_size_15"
                                        app:customTypeFace="@string/robotolightFont" />
                                </LinearLayout>
                            </LinearLayout>


                            <LinearLayout
                                android:id="@+id/restaurantDetailArea"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="bottom|center"
                                android:layout_marginBottom="15dp"
                                android:gravity="center|bottom"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginTop="15dp"
                                    android:layout_marginEnd="10dp"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <com.view.MTextView
                                        android:id="@+id/distanceHTxt"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.7"
                                        android:gravity="end"
                                        android:text="Distance from Restaurant : "
                                        android:textAlignment="viewEnd"
                                        android:textColor="@color/orangeLight"
                                        android:textSize="@dimen/txt_size_16"
                                        app:customTypeFace="@string/robotomediumFont" />

                                    <com.view.MTextView
                                        android:id="@+id/distanceVTxt"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="5dp"
                                        android:layout_weight="0.3"
                                        android:gravity="start|center"
                                        android:text="2 km(s)"
                                        android:textAlignment="viewStart"
                                        android:textColor="#000000"
                                        android:textSize="@dimen/txt_size_16"
                                        app:customTypeFace="@string/robotomediumFont" />
                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:orientation="horizontal">

                                    <com.view.MTextView
                                        android:id="@+id/restaurantLocationVTxt"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="10dp"
                                        android:layout_marginBottom="15dp"
                                        android:gravity="center"
                                        android:text="Opp. Honest Restaurant"
                                        android:textColor="@color/orangeLight"
                                        android:textSize="@dimen/txt_size_16"
                                        app:customTypeFace="@string/robotomediumFont" />
                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>

                        <ProgressBar
                            android:id="@+id/loading_order_item_list"
                            style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true" />

                        <com.view.MTextView
                            android:id="@+id/noItemsTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:textColor="#1C1C1C"
                            android:textSize="@dimen/txt_size_16"
                            android:visibility="gone" />

                        <com.view.ErrorView
                            android:id="@+id/errorView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:visibility="gone" />

                    </RelativeLayout>

