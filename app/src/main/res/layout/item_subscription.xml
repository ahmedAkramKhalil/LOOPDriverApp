<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@color/appThemeColor_bg_parent_1"
        android:shadowColor="#000"
        android:shadowDx="0"
        android:shadowDy="30"
        android:shadowRadius="50"
        app:cardCornerRadius="5dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:layout_margin="8dp"
                android:gravity="top|center">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center"
                    android:layout_weight="1"
                    android:gravity="top|center"
                    android:orientation="vertical">

                    <com.view.MTextView
                        android:id="@+id/subscriptionTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:gravity="start|center"
                        android:text=""
                        android:textAlignment="viewStart"
                        android:textColor="@color/black"
                        android:textSize="@dimen/txt_size_16"
                        android:textStyle="bold"
                        app:customTypeFace="@string/robotobold" />

                    <com.view.MTextView
                        android:id="@+id/subscriptionNameTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:gravity="start|center"
                        android:text=""
                        android:textAlignment="viewStart"
                        android:textColor="@color/black"
                        android:textSize="@dimen/txt_size_12"
                        android:textStyle="bold"
                        app:customTypeFace="@string/robotolightFont" />
                </LinearLayout>

                <com.view.MTextView
                    android:id="@+id/subscriptionPriceTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|end|center"
                    android:gravity="end|center"
                    android:textAlignment="center"
                    android:textColor="@color/appThemeColor_1"
                    android:textSize="@dimen/txt_size_18"
                    android:textStyle="bold"
                    app:customTypeFace="@string/robotobold" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center"
                    android:gravity="top|center"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <com.view.MTextView
                        android:id="@+id/subscriptionDetailTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|end|center"
                        android:gravity="end|center"
                        android:text=""
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/txt_size_16"
                        android:textStyle="bold"
                        app:customTypeFace="@string/robotobold" />

                    <View
                        android:id="@+id/view_line"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="8dp"
                        android:background="@color/black"
                        android:gravity="center" />
                </LinearLayout>


            </LinearLayout>

            <com.view.MTextView
                android:id="@+id/subscriptionDescTxt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="8dp"
                android:gravity="start|center"
                android:text=""
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_size_12"
                android:textStyle="bold"
                app:customTypeFace="@string/robotolightFont" />


            <LinearLayout
                android:id="@+id/planDetailsArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:gravity="center">

                    <com.view.MTextView
                        android:id="@+id/tvSubscribOnDateTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start|center"
                        android:maxLines="1"
                        android:text=""
                        android:textAlignment="viewStart"
                        android:textColor="#1c1c1c"
                        android:textSize="@dimen/txt_size_12"
                        app:customTypeFace="@string/robotomediumFont" />

                    <com.view.MTextView
                        android:id="@+id/tvSubscribOnDateValTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start|center"
                        android:maxLines="1"
                        android:text=""
                        android:textAlignment="viewStart"
                        android:textColor="#727272"
                        android:textSize="@dimen/txt_size_14"
                        app:customTypeFace="@string/robotolightFont" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:gravity="center">

                    <com.view.MTextView
                        android:id="@+id/tvExpireOnDateTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start|center"
                        android:maxLines="1"
                        android:text=""
                        android:textAlignment="viewStart"
                        android:textColor="#1c1c1c"
                        android:textSize="@dimen/txt_size_12"
                        app:customTypeFace="@string/robotomediumFont" />

                    <com.view.MTextView
                        android:id="@+id/tvExpireOnDateValTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start|center"
                        android:maxLines="1"
                        android:text=""
                        android:textAlignment="viewStart"
                        android:textColor="#727272"
                        android:textSize="@dimen/txt_size_14"
                        app:customTypeFace="@string/robotolightFont" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/statusArea"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="start|center"
                    android:gravity="start|center"
                    android:visibility="visible">

                    <com.view.MTextView
                        android:id="@+id/statusTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="start|center"
                        android:gravity="start|center"
                        android:text=""
                        android:textAlignment="viewStart"
                        android:textColor="#1c1c1c"
                        android:textSize="@dimen/txt_size_12"
                        android:textStyle="bold"
                        app:customTypeFace="@string/robotomediumFont" />

                    <com.kyleduo.switchbutton.SwitchButton
                        android:id="@+id/statusSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="8dp"
                        android:clickable="false"
                        android:focusableInTouchMode="false"
                        android:gravity="center"
                        android:visibility="gone"
                        app:kswBackColor="@android:color/holo_green_light"
                        app:kswBackMeasureRatio="3"
                        app:kswThumbColor="@color/appThemeColor_1"
                        app:kswThumbHeight="12dp"
                        app:kswThumbMargin="3dp"
                        app:kswThumbWidth="12dp" />

                    <com.view.MTextView
                        android:id="@+id/subscribedStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="start|center"
                        android:layout_weight="1"
                        android:gravity="start|center"
                        android:maxLines="1"
                        android:textAlignment="viewStart"
                        android:textColor="@color/appThemeColor_1"
                        android:textSize="@dimen/txt_size_16"
                        android:textStyle="bold"
                        app:customTypeFace="@string/robotomediumFont" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:gravity="end|center"
                    android:layout_gravity="end|center"
                    android:id="@+id/btnArea"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/all_btn_height5"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/rewnewArea"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">

                        <com.view.MTextView
                            android:id="@+id/renewBtnTxt"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="15dp"
                            android:gravity="center"
                            android:text="renew"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/txt_size_14"
                            android:textStyle="bold"
                            app:customTypeFace="@string/robotomediumFont" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/subScribeArea"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">

                        <com.view.MTextView
                            android:id="@+id/subScribeBtnTxt"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="20dp"
                            android:gravity="center"
                            android:text="Subscribe"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/txt_size_14"
                            android:textStyle="bold"
                            app:customTypeFace="@string/robotomediumFont" />

                    </LinearLayout>





                </LinearLayout>


            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>