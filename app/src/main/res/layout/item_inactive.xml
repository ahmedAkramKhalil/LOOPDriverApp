<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_15sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_14sdp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="@dimen/_1sdp"
                android:layout_height="match_parent">

                <View
                    android:id="@+id/tvView1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:background="#D2D2D2" />

                <View
                    android:id="@+id/tvView2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="@dimen/_45sdp"
                    android:background="#D2D2D2" />
            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_7sdp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_18sdp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="@dimen/_12sdp">

                        <com.view.MTextView
                            android:id="@+id/text_inactive_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:textColor="#141414"
                            android:textSize="@dimen/_12ssp"
                            app:customTypeFace="@string/systemMediumFont"
                            tools:text="Order Successfully Completed" />

                        <com.view.MTextView
                            android:id="@+id/text_inactive_msg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#787878"
                            android:textSize="@dimen/_11ssp"
                            app:customTypeFace="@string/systemLightFont"
                            tools:text="24 JAN" />

                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/text_inactive_btn_area"
                        android:layout_width="@dimen/_105sdp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|bottom"
                        android:layout_marginEnd="-5dp"
                        android:layout_marginBottom="@dimen/_12sdp"
                        android:minHeight="@dimen/_25sdp"
                        app:cardBackgroundColor="@color/appThemeColor_1"
                        app:cardCornerRadius="@dimen/_2sdp"
                        app:cardElevation="@dimen/_1sdp">

                        <com.view.MTextView
                            android:id="@+id/text_inactive_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:gravity="center"
                            android:lineHeight="@dimen/_8sdp"
                            android:maxLines="2"
                            android:textAlignment="center"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/_10ssp"
                            app:customTypeFace="@string/systemMediumFont"
                            tools:text="Set " />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>


        <com.view.TimelineView
            android:id="@+id/time_marker"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="start|top"

            android:layout_marginTop="@dimen/_12sdp"
            app:line="#DDDBDB"
            app:lineSize="0dp"
            app:markerSize="@dimen/_35sdp" />

    </FrameLayout>

</LinearLayout>