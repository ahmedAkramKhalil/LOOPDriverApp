<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:elevation="0dp"
        android:minHeight="@dimen/_45sdp"
        app:cardCornerRadius="@dimen/_6sdp"
        app:cardUseCompatPadding="false">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.view.MTextView

                        android:id="@+id/serviceNameTxtView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|start"
                        android:layout_marginTop="@dimen/_10ssp"

                        android:includeFontPadding="false"

                        android:marqueeRepeatLimit="marquee_forever"
                        android:text=""
                        android:textAlignment="viewStart"
                        android:textColor="#141414"
                        android:textSize="@dimen/_14ssp"
                        app:customTypeFace="@string/systemMediumFont" />

                    <com.view.MTextView

                        android:id="@+id/serviceTypeNameTxtView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="All"
                        android:textAlignment="viewStart"
                        android:textColor="#838383"
                        android:textSize="@dimen/txt_size_12"
                        android:visibility="visible" />
                </LinearLayout>


                <com.view.MTextView
                    android:id="@+id/apptypeTxtView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="12dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|start"
                    android:text=""
                    android:textAlignment="viewStart"
                    android:textColor="#838383"
                    android:textSize="@dimen/txt_size_12"
                    android:visibility="gone" />


                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/chkBox"
                    android:layout_width="@dimen/_25sdp"

                    android:layout_height="@dimen/_25sdp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:button="@drawable/checkbox_selector"
                    android:gravity="center_vertical"
                    android:theme="@style/MyCheckBox"
                    android:visibility="visible" />

                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_weight="0"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:tint="@color/appThemeColor_1"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_add_border" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10ssp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/editarea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"

                    android:orientation="horizontal"
                    android:visibility="visible">

                    <com.view.MTextView
                        android:id="@+id/serviceamtHtxt"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:maxWidth="@dimen/_150sdp"
                        android:singleLine="true"
                        android:textColor="#141414"
                        android:textSize="@dimen/_14ssp"
                        android:textStyle="bold"
                        app:customTypeFace="@string/systemMediumFont"
                        tools:text="amunt" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.view.MTextView

                            android:id="@+id/serviceamtVtxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical|start"
                            android:includeFontPadding="false"
                            android:text="$50"
                            android:textAlignment="viewStart"
                            android:textColor="@color/appThemeColor_1"
                            android:textSize="@dimen/_21ssp"
                            app:customTypeFace="@string/systemMediumFont" />

                    </LinearLayout>


                    <com.view.MTextView

                        android:layout_width="wrap_content"


                        android:layout_height="@dimen/_20sdp"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:background="@drawable/roundcolorect"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text=""
                        android:textAlignment="center"

                        android:textColor="@color/white"
                        android:textSize="@dimen/_10ssp"
                        android:visibility="gone"
                        app:customTypeFace="@string/systemMediumFont" />


                </LinearLayout>

                <com.view.MTextView
                    android:id="@+id/minHourTxtView"
                    android:layout_marginEnd="@dimen/_35sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:includeFontPadding="false"
                    android:text="asdasd"
                    android:textAlignment="viewStart"
                    android:textColor="#838383"
                    android:textSize="@dimen/txt_size_12"
                    android:visibility="visible" />
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/editBtn"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/_minus20sdp"
                android:visibility="visible"
                app:srcCompat="@drawable/ic_edit_service" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_centerInParent="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:background="#efefef"
                android:visibility="gone" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>